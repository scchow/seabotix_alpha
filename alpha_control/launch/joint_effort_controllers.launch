<launch>
  <arg name="uuv_name" />
  <arg name="arm_name" default="alpha"/>

  <rosparam subst_value="true">
    $(arg uuv_name):
      $(arg arm_name):
        joint1:
          controller:
            type: effort_controllers/JointEffortController
            joint: $(arg arm_name)/joint1
            pid: {p: 0, i: 0, d: 0}
        joint2:
          controller:
            type: effort_controllers/JointEffortController
            joint: $(arg arm_name)/joint2
            pid: {p: 0, i: 0, d: 0}
        joint3:
          controller:
            type: effort_controllers/JointEffortController
            joint: $(arg arm_name)/joint3
            pid: {p: 0, i: 0, d: 0}
        joint4:
          controller:
            type: effort_controllers/JointEffortController
            joint: $(arg arm_name)/joint4
            pid: {p: 0, i: 0, d: 0}
  </rosparam>

  <group ns="$(arg uuv_name)">
    <!-- load the controllers -->
    <node name="controller_spawner_$(arg arm_name)"
          pkg="controller_manager"
          type="spawner"
          respawn="false"
          output="screen"
          ns="/$(arg uuv_name)"
          args="/$(arg uuv_name)/$(arg arm_name)/joint1/controller
                /$(arg uuv_name)/$(arg arm_name)/joint2/controller
                /$(arg uuv_name)/$(arg arm_name)/joint3/controller
                /$(arg uuv_name)/$(arg arm_name)/joint4/controller"/>

  </group>
</launch>
