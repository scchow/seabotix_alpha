<launch>

  <!-- # The planning and execution components of MoveIt! configured to 
  # publish the current configuration of the robot (simulated or real) 
  # and the current state of the world as seen by the planner -->
  <include file="$(find seabotix_alpha_moveit_config)/launch/move_group.launch">
    <arg name="publish_monitored_planning_scene" value="true" />
  </include>

  <!-- # The visualization component of MoveIt! -->
  <include file="$(find seabotix_alpha_moveit_config)/launch/moveit_rviz.launch"/>

  <node pkg="moveit_ros_move_group" type="move_group" name="joint_state_remap" output="screen">
    <remap from="joint_states" to="/seabotix/joint_states"/>
  </node>

</launch>